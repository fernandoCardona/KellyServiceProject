
<section class="dashboard">
    <nav class="nav-dashboard">
        <p>{{fullName}} Dashboard Worker</p>
        <div>
            <span>
                <img src="{{image}}" alt="avatar">
            </span>
            <a href="/worker/edit">Edit Profile</a>
            <a href="/worker/logout"> 
                <button class="close-session">log out</button>
            </a>
        </div>
    </nav>
    <div id="map"></div>
    <div class="dashboard-content worker-dasboard">
        <div class="resume-offerts">
            <span>Resume Offerts</span>

            {{#each services }}
            <li>
                <a href="/services/details/{{_id}}"><strong><p>Service Type:</p></strong> {{serviceType}}<br><p>Address:</p>{{address}} <p>Client:</p>  {{client.fullName}}</a>
                {{!-- <a href="/services/delete?id={{id}}" class="btn">Cancel</a>  --}}
            </li>
            {{/each}}
        </div>
        <div class="worker-active-offerts">
            <span>Active offerts</span>
            {{#each appliedServices }}
            <li>
                <a href="/services/details/{{_id}}"><strong><p>Service Type:</p></strong> {{serviceType}}<p>Address:</p>{{address}} Client: {{client.fullName}}</a>

            <form action="/services/unapply?id={{id}}" method="POST">
                <button class="btn edit" type="submit" name="candidates"> Cancel </button>
            </form>

            </li>
            
            {{/each}}
        </div>
        
    </div>


</section>
